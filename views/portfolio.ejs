    }

    @media (max-width:450px) {

        .navbar {
            padding-bottom: 1%;
        }
        .navbar a {
           padding-right: .3%;
           margin-left: .2%;
           padding-bottom: 1px;
        }

        #home {
            flex-direction: column;
        }

        .home-content {
            padding-bottom: .5%;
        }

        .home-img img {
            height: 200px;
            padding-bottom: 1%;
        }

        html {
            font-size: 42%;
        }

        .contact form .input-box input {
            width: 100%;
        }
        
    }

    @media (max-width: 365px) {

        html {
            font-size: 5px;
        }
        .navbar a {
            margin-left: .6%;
        }
        .home-img img {
            width: 70vw;
        }

        .about-content {
            margin-right: 5%;
            margin-left: .1%;
        }

        .about-img img {
            width: 70vw;
        }

        #services {
            padding-top: 30%;
        }

        #portfolio {
            padding-top: 30%;
        }

        .portfolio-box img{
            display: block;
            font-size: large;
            width: 300%;
            height: 250%;
        }

        #contact {
            padding-top: 2%;
        }

        .footer {
            flex-direction: column-reverse;
        }

        .footer p {
            text-align: center;
            margin-top: 2rem;
            margin-left: .13%;

        }
        
    }


</style>
