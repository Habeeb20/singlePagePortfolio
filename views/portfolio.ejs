            left: 0;
            width: 100%;
            padding: 1rem 3%;
            background: var(--bg-color);
            border-top: .1rem solid rgba(0, 0, 0, .2);
            box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .2);
        }

        .navbar a {
            display: inline-flex;
            font-size: 2rem;
            margin: .6rem 3rem;
        }

        .home-content h3{
            font-size: 2.6rem;
            
        }

        .about {
            flex-direction: column-reverse;
        }

        .services h2 {
            margin-bottom: 3rem;
        }

        .portfolio h2 {
            margin-bottom: 3rem;
        }

        .portfolio-container {
            grid-template-columns: 2fr;
        }

    }

    @media (max-width:720px){
        body {
            overflow-x: hidden;
        }
        html {
            font-size: 0.65rem;
        }

        .home-content {
            flex-direction: column-reverse;
        }

        #services {
            display: block;
            padding-top: 35%;
        }

        #portfolio {
            display: block;
            padding-top: 45%;
            min-height: 100vh;
        }

        #contact {
            display: block;
            padding-top: 2%;
            font-size: 1.2rem;
           
            height: 90vh;
        }

    }

    @media (max-width:617px) {
        #about {
            padding-top: 19%;
        }
     
        .portfolio-container{
